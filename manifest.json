{
  "manifest_version": 2,
  "name": "Soundcloud QuickPlayer",
  "description": "Integrate a seamless audio player into browser",
  "version": "1.0",

  "browser_action": {
    "default_title": "Soundcloud Player",
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "img/note16.png",
      "48": "img/note48.png",
      "128": "img/note128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["assets/jquery-3.2.1.min.js",
                "assets/sdk-3.1.2.js",
                "js/background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "open the audio player",
      "global": true
    },
    "open-soundcloud": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "open a soundcloud.com tab",
      "global": true
    },
    "previous-location": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "go back to the tab you called open-soundcloud from",
      "global": true
    }
  }
}
