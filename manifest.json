{
  "manifest_version": 2,
  "name": "Soundcloud QuickPlayer",
  "description": "Integrate a seamless audio player into browser",
  "version": "1.0",

  "browser_action": {
    "default_title": "Soundcloud Player",
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "assets/note16.png",
      "48": "assets/note48.png",
      "128": "assets/note128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["assets/jquery-3.2.1.min.js",
                "assets/sdk-3.1.2.js",
                "assets/sc-widget-api.js",
                "js/background.js"],
    "persistent": false
  },
  "content_scripts" : [
    {
      "matches" : ["http://soundcloud.com/*", "https://soundcloud.com/*"],
      "js" : ["assets/jquery-3.2.1.min.js",
              "assets/sdk-3.1.2.js",
              "js/soundcloud_content_script.js"],
      "all_frames" : true
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "open the audio player",
      "global": true
    },
    "open-soundcloud": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "open a soundcloud.com tab",
      "global": true
    },
    "previous-location": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "go back to the tab you called open-soundcloud from",
      "global": true
    }
  }
}
