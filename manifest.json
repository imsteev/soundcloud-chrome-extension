{
  "manifest_version": 2,
  "name": "Soundcloud QuickPlayer",
  "description": "Integrate a seamless audio player into browser",
  "version": "1.0",

  "browser_action": {
    "default_title" : "Soundcloud Player",
    "default_popup" : "popup.html",
    "default_icon" : {
        "16" : "images/note16.png",
        "48" : "images/note48.png",
        "128": "images/note128.png"
    }
  },
  "background" : {
    "scripts" : ["background.js"],
    "persistent" : false
  },
  "commands" : {
    "open-player" : {
      "suggested_key" : {
        "default" : "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description" : "open the audio player",
      "global" : true
    },
    "open-soundcloud" : {
      "suggest_key" : {
        "default" : "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description" : "open soundcloud.com",
      "global" : true
    }
  }
}
